<div class="row">
	<div class="col-md-6">
		<%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, cart_item_path(cart_item), method: 'delete', class: 'btn btn-default' %>
		<b><%= cart_item.title[0..15] %></b> 
		<b><%= cart_item.total %>$</b>
	</div>
	<div class="col-md-6">
		<div class="row">
			<div class="col-md-9">
			<%= simple_form_for cart_item, method: :put do |f| %>
						<%= f.input :amount, label: false %>
			</div>
			<div class="col-md-3">
					<%= f.button :button, class: "btn btn-default" do %>
						<span class="glyphicon glyphicon-ok" aria-hidden="true></span> Update Form"
					<% end %>
			</div>
			<% end %>
		</div>
	</div>
</div>